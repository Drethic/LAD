{
  "name": "lad",
  "version": "0.0.1",
  "description": "Life and Death",
  "main": "index.js",
  "scripts": {
    "check": "jshint --verbose --config .jshintrc src",
    "test": "npm run check && npm run test:unit",
    "test:unit": "multi='spec=- xunit=xunit.xml' istanbul cover -x '**/*-spec.js' --report lcov --report cobertura _mocha -- --reporter mocha-multi $(find . -type f -name '*-spec.js' ! -name '*-itest-spec.js' ! -path '*/node_modules/*')",
    "postinstall": "grunt",
    "pm2-start": "pm2 start process.yml --only lad-server"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Drethic/LAD.git"
  },
  "author": "Drethic and m1sf17",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Drethic/LAD/issues"
  },
  "homepage": "https://github.com/Drethic/LAD#readme",
  "dependencies": {
    "async": "^2.5.0",
    "bcrypt-nodejs": "0.0.3",
    "body-parser": "^1.17.2",
    "bower": "^1.8.0",
    "express": "^4.15.4",
    "grunt": "^1.0.1",
    "grunt-bower-task": "^0.5.0",
    "mongodb": "^2.2.31",
    "mongoose": "^4.11.7"
  },
  "devDependencies": {
    "istanbul": "^0.4.5",
    "jshint": "^2.9.5",
    "mocha": "^3.5.0",
    "mocha-multi": "^0.11.0",
    "must": "^0.13.4"
  }
}
